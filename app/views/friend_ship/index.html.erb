<%= render 'layouts/navigation' %>
<div class="container">
<div class="content">
<h2>Friends</h2>
<div>

  <div class="addFrind">  
   
  <h4>Your friend email:</h4>  
    <% flash.each do |key, value| %>
       
        <div class="alert alert-<%= key %>"><%= value %></div>
        <%end%>
    
  <%= form_with  url: friend_ship_index_url , :html => { :method => :post } ,local: true do |form| %>
  <%= form.text_field :email %>
  <%= form.submit %>
  <% end %>


    



  </div>

  <div>
  
  <%# <%=   @friends.inspect%> 
  </div>


<div class="scrollable p-4 rounded border">

   <div><h4>Your Friends</h4><hr></div>  
    
  <div class=" row " >
    <%@friends.each  do |friend|%>
    <div class="col-sm-4">
    <svg class="bd-placeholder-img mr-2 rounded" width="50" height="50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark " style=" font-size: 20px;" ><%=friend.name%></strong>
          <%# <a href="#">Unfriend</a> %>
        <span style=" font-size: 20px;">
           <%= link_to 'Unfriend', 
                friend_ship_path(friend), 
                             method: :delete, 
                             data: { confirm: 'Are you sure?' } %> 
        </span> 

        </div>
        <%# <span class="d-block">@username</span> %>
      </div>
    </div>
    <%end%>


    
  </div>
</div>
</div>
